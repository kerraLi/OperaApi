<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ywxt.Domain.Role" table="roles">
		<id name="id" type="java.lang.Long">
			<column name="id" not-null="true"/>
			<generator class="native"/>
		</id>
		<property name="roleName" length="20" />
		<property name="roleDesc" length="255"/>
		<!-- 配置角色和用户的多对多关系 -->
		<set name="users" inverse="true" table="user_role" lazy="false">
			<key>
				<column name="roleId" length="32" not-null="true" />
			</key>
                <many-to-many entity-name="com.ywxt.Domain.User">
				<column name="userId" length="32" not-null="true" />
			</many-to-many>
		</set>
		<!-- 配置角色和权限的多对多关系 -->
		<set name="permissions" table="role_permission" lazy="false" >
			<key>
				<column name="roleId" length="32" not-null="true" />
			</key>
			<many-to-many entity-name="com.ywxt.Domain.Permission">
				<column name="permissionId" length="32" not-null="true" />
			</many-to-many>
		</set>




	</class>
</hibernate-mapping>