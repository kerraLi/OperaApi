<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ywxt.Domain.Role" table="roles">
		<id name="id" type="java.lang.Long">
			<column name="id" not-null="true"/>
			<generator class="native"></generator>
		</id>
		<property name="roleName" length="20" />
		<property name="roleDesc" length="255"/>
		<!-- 配置岗位和用户的多对多关系 -->
		<set name="users" table="user_role">
			<key column="roleId"></key>
			<many-to-many class="com.ywxt.Domain.User" column="userId"/>
		</set>
		<!-- 配置角色和权限的多对多关系 -->
		<set name="permissions" table="role_permission" lazy="false">
			<key column="roleId"/>
			<many-to-many class="com.ywxt.Domain.Permission" column="permissionId"/>
		</set>
	</class>
</hibernate-mapping>