<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ywxt.Domain.Permission" table="permissions">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="permissionName" length="20" />
		<property name="url" length="255"/>
		<!-- 配置权限和角色的多对多关系 -->
		<set name="roles" inverse="true" table="role_permission" >
			<key>
				<column name="permissionId" length="32" not-null="true" />
			</key>
			<many-to-many entity-name="com.ywxt.Domain.Role">
				<column name="roleId" length="32" not-null="true" />
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>