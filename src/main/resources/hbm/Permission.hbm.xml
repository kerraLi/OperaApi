<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ywxt.Domain.Permission" table="permissions">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="permissionName" length="20" />
		<property name="url" length="255"/>

		<!-- 配置下级权限和上级权限的多对一关系 -->
		<many-to-one name="parent" class="com.ywxt.Domain.Permission" column="parentId"/>
		<!-- 配置上级权限和下级权限的一对多关系 -->
		<set name="children" order-by="id" lazy="false">
			<key column="parentId"></key>
			<one-to-many class="com.ywxt.Domain.Permission"/>
		</set>
		
		<!-- 配置权限和角色的多对多关系 -->
		<set name="roles" table="role_permission">
			<key column="permissionId"/>
			<many-to-many class="com.ywxt.Domain.Role" column="roleId"/>
		</set>
	</class>
</hibernate-mapping>